
<h1>Explore the Categories</h1>

  <% @categories.each do |category| %>
             <div class="menuhols">
            <p><%= category.title %></p>
           <%= link_to (image_tag category.image, :class=>"menuholsIm"), category %>
           <p><%= category.description %></p>
    <p><a href="/category/<%= category.title %>" class="button"><%= category.title %></a></p>
     </div>
    <% end %>




