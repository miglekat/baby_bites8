<p id="notice"><%= notice %></p>

      <% if @cart.empty? %>
    <h1> Your cart is empty</h1>
<%end%>




<div id="menusContainer">
    <table id="customers">
        <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        
        <% menu = Menu.find_by_id(id) %>
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag menu.url, :style =>"height:40px"), menu %>
                </div>
                
            </td>
            
            <td class="title"><%= link_to menu.title, menu %></td>
            <td>
            
        <a href="/cart/remove/<%= menu.id %>">Remove From Cart</a>
         <a href="/cart/decrease/<%= menu.id %>">Decrease</a>
                </td>
        <td class="price"><%= number_to_currency(menu.price, :unit =>"€") %></td>
        <td class="quantity"><%= quantity %></td>
        <td class="price"><%= number_to_currency(quantity * menu.price, :unit =>"€") %></td>

     </tr>
        <% total += quantity * menu.price %>
        <%end%>
        <tr>
            Grang Total: <%= number_to_currency(total, :unit => "€") %>
          </tr>

    </table>
      </div>
      <p>
          <a href="/checkout" class="button">Checkout</a>
          <a href="/menus" class="button">Continue Shopping</a>
          <a href="/clearcart" class="button">Clear Cart</a>
      </p>


      


